<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <EditText
        android:id="@+id/et_reset_password_confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/reset_pass_text_style"
        android:ems="16"
        android:inputType="textVisiblePassword"
        android:text="  Confirm Password"
        android:textAlignment="textStart"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_password_newpass" />

    <Button
        android:id="@+id/btn_reset_password_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:fontFamily="@font/arvo_bold"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_reset_password_confirmpass"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_password_confirmpass" />

    <TextView
        android:id="@+id/tv_reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:text="@string/reset_pass_title"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_reset_password_logo" />

    <EditText
        android:id="@+id/et_reset_password_newpass"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/reset_pass_text_style"
        android:ems="16"
        android:inputType="textVisiblePassword"
        android:text="  New Password"
        android:textAlignment="textStart"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reset_password_title" />

    <ImageView
        android:id="@+id/img_reset_password_logo"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/revature" />

</androidx.constraintlayout.widget.ConstraintLayout>